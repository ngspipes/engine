<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ngspipesengine.userInterface.controllers.FXMLLoadPipelineController">
   <children>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="loadPipelineLabel" text="Load pipeline:" textFill="#3e294a" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="Century Gothic Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <TextField fx:id="tFPipeline" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button id="searchBtn" fx:id="bPipeline" mnemonicParsing="false" styleClass="buttons" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <stylesheets>
                        <URL value="@../css/SearchButton.css" />
                        <URL value="@../css/Buttons.css" />
                     </stylesheets>
                  </Button>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="resultsLabel" text="Results path:" textFill="#3e294a" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="Century Gothic Bold" size="18.0" />
               </font>
            </Label>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <TextField fx:id="tFResults" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button id="searchBtn" fx:id="bResults" mnemonicParsing="false" styleClass="buttons" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <stylesheets>
                        <URL value="@../css/SearchButton.css" />
                        <URL value="@../css/Buttons.css" />
                     </stylesheets>
                  </Button>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </VBox>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="resultsLabel1" text="Inputs path:" textFill="#3e294a" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="Century Gothic Bold" size="18.0" />
               </font>
            </Label>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <TextField fx:id="tFInputs" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button id="searchBtn" fx:id="bInputs" mnemonicParsing="false" styleClass="buttons" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <stylesheets>
                        <URL value="@../css/SearchButton.css" />
                        <URL value="@../css/Buttons.css" />
                     </stylesheets>
                  </Button>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Engine:">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="cBEngines" prefWidth="150.0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
      <Button id="okBtn" fx:id="bConfirm" mnemonicParsing="false" prefHeight="36.0" prefWidth="37.0" styleClass="buttons" VBox.vgrow="ALWAYS">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <stylesheets>
            <URL value="@../css/OkButton.css" />
            <URL value="@../css/Buttons.css" />
         </stylesheets>
      </Button>
   </children>
</VBox>
